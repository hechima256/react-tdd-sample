{
	"name": "@react-tdd-sample/backend",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"lint": "eslint .",
		"test": "vitest",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"format": "prettier --write \"src/**/*.{ts}\"",
		"format:check": "prettier --check \"src/**/*.{ts}\""
	},
	"dependencies": {
		"@fastify/cors": "^10.0.1",
		"@fastify/swagger": "^9.1.0",
		"@fastify/swagger-ui": "^5.2.3",
		"fastify": "^5.4.0"
	},
	"devDependencies": {
		"@types/node": "^22.14.1",
		"tsx": "^4.19.2",
		"typescript": "~5.7.2",
		"vitest": "^3.1.1"
	}
}
